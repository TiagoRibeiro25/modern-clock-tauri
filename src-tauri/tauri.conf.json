{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "modern-clock",
	"version": "0.1.0",
	"identifier": "com.tiago.modern-clock",
	"build": {
		"beforeDevCommand": "npm run dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "npm run build",
		"frontendDist": "../dist"
	},
	"app": {
		"windows": [
			{
				"title": "Modern Clock",
				"width": 400,
				"height": 420,
				"minHeight": 240,
				"minWidth": 300,
				"resizable": true,
				"fullscreen": false,
				"decorations": false,
				"visible": false
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "nsis",
		"icon": ["icons/icon.ico", "icons/icon.png"],
		"resources": ["icons/"]
	}
}
